{
  "name": "talk-frontend-with-mocks",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^0.25.0",
    "concurrently": "^7.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-scripts": "5.0.0",
    "react-toastify": "^8.1.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "REACT_APP_API_URL=http://localhost:9999 react-scripts start",
    "start-mock": "REACT_APP_API_URL=http://localhost:8888 REACT_APP_ACTIVATE_MOCK=true react-scripts start",
    "start-with-server": "concurrently -c blue,green \"npm:json-server\" \"npm:start-json-server\"",
    "start-json-server": "REACT_APP_API_URL=http://localhost:8888 react-scripts start",
    "json-server": "json-server --watch db.json --port 8888",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "miragejs": "^0.1.43"
  }
}
